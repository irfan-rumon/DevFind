<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_developer_form" model="ir.ui.view">
        <field name="name">devfind.developer.form</field>
        <field name="model">devfind.developer</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="technology_ids" widget="many2many_tags"/>
                        <field name="min_hourly_rate"/>
                        <field name="max_hourly_rate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_developer_tree" model="ir.ui.view">
        <field name="name">devfind.developer.list</field>
        <field name="model">devfind.developer</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="min_hourly_rate"/>
                <field name="max_hourly_rate"/>
            </list>
        </field>
    </record>

    <record id="action_developer" model="ir.actions.act_window">
        <field name="name">Developers</field>
        <field name="res_model">devfind.developer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Create a root menu for your module -->
    <menuitem 
        id="menu_devfind_root"
        name="DevFind"
        sequence="10"/>

    <!-- Create a submenu under your root menu -->
    <menuitem 
        id="menu_devfind_developer"
        name="Developers"
        parent="menu_devfind_root"
        action="action_developer"
        sequence="1"/>
</odoo>