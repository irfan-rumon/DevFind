<odoo>
    <template id="developer_registration_template" name="Developer Registration">
        <t t-call="web.layout">
            <t t-set="title">Developer Registration</t>
            <t t-set="body_classname" t-value="'o_register_page'"/>

            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-10">
                        <div class="card shadow-sm">
                            <div class="card-body p-4">
                                <h2 class="text-center mb-5 font-weight-bold">Developer Registration</h2>

                                <form action="/developer/register/submit" method="post" class="o_register_form">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <!-- First Name and Last Name -->
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <label for="first_name" class="form-label">First Name</label>
                                            <input type="text" class="form-control" id="first_name" name="first_name" required="1" placeholder="Enter your first name"/>
                                        </div>
                                        <div class="col-md-6" style="margin-top:20px;">
                                            <label for="last_name" class="form-label">Last Name</label>
                                            <input type="text" class="form-control" id="last_name" name="last_name" required="1" placeholder="Enter your last name"/>
                                        </div>
                                    </div>

                                    <!-- Email and Phone -->
                                    <div class="row g-4">
                                        <div class="col-md-6" style="margin-top:20px;">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" class="form-control" id="email" name="email" required="1" placeholder="Enter your email"/>
                                        </div>
                                        <div class="col-md-6"  style="margin-top:20px;">
                                            <label for="phone" class="form-label">Phone</label>
                                            <input type="tel" class="form-control" id="phone" name="phone" required="1" placeholder="Enter your phone number"/>
                                        </div>
                                    </div>

                                    <!-- Gender and Password -->
                                    <div class="row g-4">
                                        <div class="col-md-6"  style="margin-top:20px;">
                                            <label for="gender" class="form-label">Gender</label>
                                            <select class="form-select" id="gender" name="gender" required="1">
                                                <option value="">Select Gender</option>
                                                <option value="male">Male</option>
                                                <option value="female">Female</option>
                                                <option value="other">Other</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6"  style="margin-top:20px;">
                                            <label for="password" class="form-label">Password</label>
                                            <input type="password" class="form-control" id="password" name="password" required="1" placeholder="Create a password"/>
                                        </div>
                                    </div>

                                    <!-- Hourly Rates -->
                                    <div class="row g-4">
                                        <div class="col-md-6"  style="margin-top:20px;">
                                            <label for="min_hourly_rate" class="form-label">Minimum Hourly Rate</label>
                                            <input type="number" class="form-control" id="min_hourly_rate" name="min_hourly_rate" required="1" placeholder="Enter minimum hourly rate"/>
                                        </div>
                                        <div class="col-md-6"  style="margin-top:20px;">
                                            <label for="max_hourly_rate" class="form-label">Maximum Hourly Rate</label>
                                            <input type="number" class="form-control" id="max_hourly_rate" name="max_hourly_rate" required="1" placeholder="Enter maximum hourly rate"/>
                                        </div>
                                    </div>

                                    <!-- Profile Links -->
                                    <div class="row g-4">
                                        <div class="col-md-6"  style="margin-top:20px;">
                                            <label for="github_profile" class="form-label">GitHub Profile</label>
                                            <input type="text" class="form-control" id="github_profile" name="github_profile" placeholder="Enter GitHub profile URL"/>
                                        </div>
                                        <div class="col-md-6"  style="margin-top:20px;">
                                            <label for="linkedin_profile" class="form-label">LinkedIn Profile</label>
                                            <input type="text" class="form-control" id="linkedin_profile" name="linkedin_profile" placeholder="Enter LinkedIn profile URL"/>
                                        </div>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-light btn-lg px-5 py-3">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>

        <style type="text/css">
            .o_register_page {
                background-color: #f8f9fa;
                font-family: 'Arial', sans-serif;
            }

            .card {
                border: none;
                border-radius: 0.75rem;
            }

            .card-body {
                padding: 3rem;
            }

            .form-label {
                font-weight: 600;
                font-size: 1rem;
                color: #495057;
                margin-bottom: 0.75rem;
                margin-top: 1rem;
            }

            .form-control, .form-select {
                border-radius: 0.375rem;
                padding: 1rem;
                font-size: 1rem;
                box-shadow: 0 0 0.125rem rgba(0, 0, 0, 0.075);
            }

            .form-control:focus, .form-select:focus {
                box-shadow: 0 0 0.25rem rgba(0, 123, 255, 0.25);
                border-color: #007bff;
            }

            .btn-light {
                background-color: #f0f2f5;
                border-color: #ced4da;
                font-weight: 600;
                text-transform: uppercase;
                border-radius: 0.375rem;
            }

            .btn-light:hover {
                background-color: #e2e6ea;
                border-color: #adb5bd;
            }

            .btn-lg {
                font-size: 1.25rem;
                height: 50px;
                padding: 0.75rem 1.5rem;
            }

            .text-center {
                text-align: center;
            }

            .mt-4 {
                margin-top: 1.5rem;
            }

            .g-4 {
                gap: 1.5rem;
            }
        </style>
    </template>
</odoo>
