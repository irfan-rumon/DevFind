<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_technology_form" model="ir.ui.view">
        <field name="name">devfind.technology.form</field>
        <field name="model">devfind.technology</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="developer_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_technology_tree" model="ir.ui.view">
        <field name="name">devfind.technology.list</field>
        <field name="model">devfind.technology</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="developer_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="action_technology" model="ir.actions.act_window">
        <field name="name">Technologies</field>
        <field name="res_model">devfind.technology</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>